<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardElevation="15dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="@color/colorWhite">

        <TextView
            android:id="@+id/foodname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:text="Food To Order"
            android:textAlignment="inherit"
            android:textColor="@color/colorOrange"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/foodquantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodname"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:text="Food Quantity"
            android:textAlignment="inherit"
            android:textColor="@color/colorOrange"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/foodprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodquantity"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:text="Food Price"
            android:textAlignment="inherit"
            android:textColor="@color/colorOrange"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/firstdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/foodprice"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:text="Date"
            android:textAlignment="inherit"
            android:textColor="@color/colorOrange"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/firsttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstdate"
            android:layout_alignParentEnd="true"
            android:layout_margin="5dp"
            android:layout_marginEnd="3dp"
            android:text="Time"
            android:textAlignment="inherit"
            android:textColor="@color/colorOrange"
            android:textSize="14dp" />

        <ImageView
            android:id="@+id/cartFoodImage"
            android:layout_width="153dp"
            android:layout_height="136dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="3dp"
            android:layout_marginBottom="36dp"
            android:scaleType="centerCrop" />



    </RelativeLayout>



</android.support.v7.widget.CardView>