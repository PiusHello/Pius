<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="15dp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:background="@color/colorPrimaryDark">

        <TextView
            android:id="@+id/foodname"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food To Order"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_alignParentEnd="true"
            android:textAlignment="inherit"/>


        <TextView
            android:id="@+id/foodquantity"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/foodname"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Food Quantity"
            android:textAlignment="inherit"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />


        <TextView
            android:id="@+id/foodprice"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Food Price"
            android:textAlignment="inherit"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_below="@+id/foodquantity"/>

        <TextView
            android:id="@+id/firstdate"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Date"
            android:textAlignment="inherit"
            android:textColor="@color/colorWhite"
            android:textSize="14dp"
            android:layout_below="@+id/foodprice"/>

        <TextView
            android:id="@+id/firsttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstdate"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:text="Time"
            android:textAlignment="inherit"
            android:textColor="@color/colorWhite"
            android:textSize="14dp" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:id="@+id/cartFoodImage"
            android:layout_margin="3dp"
            android:scaleType="centerCrop"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>