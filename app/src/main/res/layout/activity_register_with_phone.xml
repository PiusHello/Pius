<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherActivitiesClass.RegisterWithPhone">


    <TextView
        android:id="@+id/phoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter Your Phone Number"
        android:textColor="@color/colorBlack"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/inputPhoneNumber"
        android:layout_below="@+id/phoneNumber"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:hint="Phone"
        android:inputType="phone"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/getVerificationCode"
        android:layout_width="300dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:text="Get Verfication Code"
        android:background="@color/colorBlue"
        android:textColor="@color/colorWhite"
        android:textSize="16dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputPhoneNumber"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/getVerificationCode"
        android:layout_marginTop="5dp"
        android:layout_height="180dp"
        android:id="@+id/r1">

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:id="@+id/verificationCode"
            android:layout_centerInParent="true"
            android:hint="Enter Code"
            android:inputType="number"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/verificationCode"
            android:layout_centerInParent="true"
            android:text="Submit"
            android:textSize="16dp"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"/>
    </RelativeLayout>
</RelativeLayout>